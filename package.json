{
  "name": "@arbs.io/extract-text-content",
  "version": "0.0.4",
  "description": "Package to parse and retreive text from documents",
  "license": "MIT",
  "private": false,
  "publisher": "AndrewButson",
  "repository": {
    "type": "git",
    "url": "https://github.com/arbs-io/extract-text-content.git"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/arbs-io"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "npm install && npm run npm:build && npm run npm:pack",
    "npm:build": "tsc && node esbuild.config.js",
    "npm:pack": "npm pack --pack-destination=./releases",
    "npm:publish": "npm publish --access=public"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "esbuild": "^0.12.6",
    "eslint": "^8.41.0",
    "npm-dts": "^1.3.9",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "file-type": "^18.4.0",
    "mammoth": "^1.5.1",
    "node-html-markdown": "^1.3.0",
    "pdfjs-dist": "^3.7.107"
  }
}
