{
  "compilerOptions": {
    "incremental": false,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "lib": ["es2020"],
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/index.mts"],
  "exclude": ["node_modules", ".vscode-test"]
}
